<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/next3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:src="@drawable/baseline_chevron_right_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtColorPelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="@string/color_pelo"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTxtColorPelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtColorPelo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="text"
            android:textColor="#5500ED" />

        <TextView
            android:id="@+id/error5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTxtColorPelo"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20sp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/design_default_color_primary_variant"
            android:visibility="invisible" />


        <!-- You can add an ImageView for the chip or other icons as needed -->
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>