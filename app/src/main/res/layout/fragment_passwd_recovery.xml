<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLinkSent"
            android:layout_width="378dp"
            android:layout_height="231dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.877">

                    <!-- Campo de texto para el correo electr贸nico -->

                    <!-- Bot贸n para enviar la solicitud -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/enlace_de_recuperaci_n_enviado"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/b_scalo_en_la_bandeja_principal_del_correo_electr_nico"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/si_no_lo_localizas_b_scalo_en_tu_bandeja_de_spam_o_correo_no_deseado"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/error6PasswdR"
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/design_default_color_primary_variant"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progressBarLinkSent"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="225dp"
                        android:layout_height="71dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1" />

                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRecovery"
            android:layout_width="371dp"
            android:layout_height="248dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.877">

                    <!-- Campo de texto para el correo electr贸nico -->

                    <!-- Bot贸n para enviar la solicitud -->

                    <TextView
                        android:id="@+id/tvHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:text="@string/recover_passwd_txtView"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/emailRecoveryPasswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/recuperacion_clave"
                        android:inputType="textEmailAddress"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btnRecoverPasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:backgroundTint="@android:color/holo_purple"
                        android:text="@string/send_link_recovery_btn"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="?android:attr/buttonCornerRadius" />

                    <TextView
                        android:id="@+id/error6"
                        android:layout_width="355dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/design_default_color_primary_variant"
                        android:visibility="invisible" />

                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>