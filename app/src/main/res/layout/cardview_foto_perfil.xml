<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/next7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="300dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cardview_shadow_end_color"
                        android:src="@drawable/baseline_chevron_right_24" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtFotoPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="@string/text_foto"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/foto_perfil"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCamara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/texto_camara"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtGaleria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="@string/texto_galeria"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtSinFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="@string/texto_sin_foto"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonCamera"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/boton_redondo"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_camera" />

                    <ImageButton
                        android:id="@+id/buttonGallery"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/boton_redondo"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_gallery" />

                    <ImageButton
                        android:id="@+id/buttonSinFoto"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/boton_redondo"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_report_image" />
                </LinearLayout>

                <TextView
                    android:id="@+id/error4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="77sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20sp"
                    android:text="TextView"
                    android:textColor="@color/design_default_color_primary_variant"
                    android:visibility="invisible" />


            </LinearLayout>

            <!-- You can add an ImageView for the chip or other icons as needed -->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>