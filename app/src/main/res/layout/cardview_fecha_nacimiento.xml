<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/next6"
                        android:layout_width="112dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="300dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cardview_shadow_end_color"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtFechaNaci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="@string/fecha_de_nacimiento"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/seleccionFechaNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="63dp"
                        android:layout_marginEnd="63dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:textColor="#5500ED"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/iconoCalendario"
                        android:layout_width="46dp"
                        android:layout_height="53dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="7dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_calendar" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtFechaVacia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="30dp"
                    android:text="TextView"
                    android:textColor="@color/design_default_color_primary_variant"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- You can add an ImageView for the chip or other icons as needed -->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>